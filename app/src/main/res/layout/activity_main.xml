<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30sp"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <!--
    Q:why doI define an ID to a layout?
    A:I am trying to add an ID to a linearlayout and setting an onclick listener:-->




    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id = "@+id/firstLayout"

        >

        <!--parent: which means that the view wants to be as big as its parent (minus padding),
       what is their parent
       what is the padding -->

        <TextView
            android:id="@+id/acTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/xValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"/>


        <TextView
            android:id="@+id/yValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp" />


        <TextView
            android:id="@+id/zValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id= "@+id/secondLayout"
        android:layout_below = "@+id/firstLayout"
        android:layout_marginTop="10sp"
        >
        <TextView
            android:id="@+id/gyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/xGyroValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"/>

        <TextView
            android:id="@+id/yGyroValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp" />

        <TextView
            android:id="@+id/zGyroValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id= "@+id/thirdLayout"
        android:layout_below = "@+id/secondLayout"
        android:layout_marginTop="10sp"
        >

        <TextView
            android:id="@+id/xMangoValue"
            android:layout_width="100sp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/yMangoValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100sp" />

        <TextView
            android:id="@+id/zMangoValue"
            android:layout_width="100sp"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id= "@+id/fourthLayout"
        android:layout_below = "@+id/thirdLayout"
        android:layout_marginTop="10sp"
        >

        <TextView
            android:id="@+id/light"
            android:layout_width="200sp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/pressure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200sp" />

        <TextView
            android:id="@+id/temp"
            android:layout_width="200sp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/humi"
            android:layout_width="200sp"
            android:layout_height="wrap_content" />


    </LinearLayout>


</RelativeLayout>